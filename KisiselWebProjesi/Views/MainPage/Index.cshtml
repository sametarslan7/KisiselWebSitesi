@using KisiselWebProjesi.Models.Classes
@model List<MainPage>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width , initial-scale=1.0">
    <title>Kişisel Web Sitesi</title>
    <link rel="stylesheet" href="~/view-KisiselWebSitesi/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body>
    <div class="admin_icon">
        <a href="#">
            <img src="~/view-KisiselWebSitesi/8644456.png">
        </a>
        <h3>ADMİN</h3>
    </div>
    <div class="center">
        <div class="avatar">
            @foreach (var x in Model)
            {
                <img src="@x.profile_photo" alt="profile resmi">
            }

        </div>
        <div class="content">
            @foreach (var x in Model)
            {
                <h1>@x.name</h1>
                <h2>@x.title</h2>
                <p>
                    @x.description
                </p>
                <h3> @x.contact </h3>
            }

        </div>
        @Html.Action("Icons","MainPage")
    </div>
</body>
</html>