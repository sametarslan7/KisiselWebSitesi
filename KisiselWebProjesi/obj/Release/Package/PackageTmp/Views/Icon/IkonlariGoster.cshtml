@model KisiselWebProjesi.Models.Classes.Icons

@{
    ViewBag.Title = "IkonlariGoster";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="mt-4">İkon Güncelle</h2>

<hr />

@using (Html.BeginForm("IkonlariGuncelle", "Icon", FormMethod.Post))
{
    @Html.LabelFor(x => x.id)
    @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly" })
    <br />

    @Html.LabelFor(x => x.icon_name)
    @Html.TextBoxFor(x => x.icon_name, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.icon_link)
    @Html.TextBoxFor(x => x.icon_link, new { @class = "form-control" })
    <br />

    <button class="btn btn-success"> İkonu Güncelle </button>

}