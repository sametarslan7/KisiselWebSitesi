
@using KisiselWebProjesi.Models.Classes
@model List<MainPage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered mt-3">
    <tr>
        <th> ID </th>
        <th> İsim </th>
        <th> Güncelle </th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.name</td>
            <td><a href="@Url.Action("BilgileriGoster", "Admin", new { id = x.id })" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }

</table>
