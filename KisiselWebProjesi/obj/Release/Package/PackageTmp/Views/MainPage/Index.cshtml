<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with Steller landing page.">
    <meta name="author" content="Devcrud">
    <title>Samet Arslan</title>
    <!-- font icons -->
    <link rel="stylesheet" href="~/steller/vendors/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <!-- Bootstrap + Steller main styles -->
    <link rel="stylesheet" href="~/steller/style2.css">
    <link rel="stylesheet" type="text/css" href="~/steller/style3.css">

</head>
<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">

    <!-- Page navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" data-spy="affix" data-offset-top="0">
        <div class="container">
            <a class="navbar-brand" style="margin-top:15px;"><img src="~/steller/imgs/default-Photoroom.png" alt=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto align-items-center">
                    <li class="nav-item" style="margin-right:50px;">
                        <a href="mailto:sametarslan1129@gmail.com?subject=İletişim&body=Merhaba%20Samet%2C%20">
                            İletişime Geç
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Login")">
                            Admin
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End of page navibation -->
    <!-- Page Header -->
    <header class="header" id="home">
        <div class="container">
            <div class="infos" style="margin-top: 0px;">
                <h6 class="subtitle">merhaba,Ben</h6>
                <h6 class="title">@firstItem.name</h6>
                <p>@firstItem.title</p>

                <div class="buttons pt-3">
                    <button class="btn btn-primary rounded" onclick="sendEmail()">Send E-mail</button>
                </div>
                <div class="row align-items-center">
                    @Html.Action("Icons", "MainPage")
                </div>
            </div>
            <div class="img-holder">
                <img src="~/steller/imgs/man.svg" alt="">
            </div>
    </header>
    <!-- End of Page Header -->
    <!-- About section -->
    <section id="about" class="section mt-3">
        <div class="container mt-5">
            <div class="row text-center text-md-left">
                <div class="col-md-3">
                    <img src="~/steller/imgs/IMG_8994.jpg" alt="" class="img-thumbnail mb-4">
                </div>
                <div class="pl-md-4 col-md-9">
                    <h6 class="title">@firstItem.name</h6>
                    <p class="subtitle">@firstItem.title</p>
                    <p>@firstItem.description</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Service section -->
    <section id="service" class="section">
        <div class="container text-center">
            <h6 class="subtitle">Hizmet</h6>
            <h6 class="section-title mb-4">Neler Yapıyorum ?</h6>
            <p class="mb-5 pb-4">"Hizmetlerim arasında C# programlama, veritabanı yönetimi ve MVC tabanlı full-stack web geliştirme yer almaktadır.<br> Projelerimde modern yazılım teknikleri kullanarak, hem front-end hem back-end ihtiyaçlarınıza çözümler sunuyorum."</p>

            <div class="row">
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="custom-card card border">
                        <div class="card-body">
                            <i class="icon ti-crown"></i>
                            <h5>Veritabanı Yönetimi</h5>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="custom-card card border">
                        <div class="card-body">
                            <i class="icon ti-desktop"></i>
                            <h5>Full-Stack Web Geliştirme</h5>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="custom-card card border">
                        <div class="card-body">
                            <i class="icon ti-window"></i>
                            <h5>C# Programlama</h5>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="custom-card card border">
                        <div class="card-body">
                            <i class="icon ti-bar-chart"></i>
                            <h5>Web Tasarım</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End of Sectoin -->
    <!-- Experiences section -->
    <section id="portfolio" class="section">
        <div class="container text-center">
            <h6 class="section-title mb-4">Deneyimler</h6>

            @Html.Action("Experience", "MainPage")

        </div>
    </section>


    <!-- End of experiences section -->
    <!-- Sertificiates section -->
    <!-- Certificates section -->
    <section id="certificates" class="section">
        <div class="container text-center">
            <h6 class="section-title mb-4">Sertifikalar</h6>

            @Html.Action("Sertificiate", "MainPage")

        </div>
    </section>

    <!-- End of sertificiates section -->
    <!-- Portfolio section -->
    <section id="projects" class="section">
        <div class="container text-center">
            <h6 class="section-title mb-4">Projeler</h6>
            <p class="mb-5 pb-4">Geliştirdiğim projelere göz atıp GitHub repolarını inceleyebilirsiniz</p>

            @Html.Action("Project", "MainPage")

        </div>
    </section>

    <!-- End of portfolio section -->
    <!-- Page Footer -->
    <footer class="page-footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    SAMET ARSLAN / Portfolio
                </div>
                @Html.Action("Icons", "MainPage")
            </div>
        </div>
    </footer>
    <!-- End of page footer -->
    <!-- core  -->
    <script src="assets/vendors/jquery/jquery-3.4.1.js"></script>
    <script src="assets/vendors/bootstrap/bootstrap.bundle.js"></script>
    <!-- bootstrap 3 affix -->
    <script src="assets/vendors/bootstrap/bootstrap.affix.js"></script>

    <!-- steller js -->
    <script src="assets/js/steller.js"></script>

    <!-- Send - Mail Script js -->

    <script>
        function sendEmail() {
            window.location.href = 'mailto:sametarslan1129@gmail.com?subject=İletişim&body=Merhaba%20Samet%2C%20';
        }
    </script>
</body>
</html>


