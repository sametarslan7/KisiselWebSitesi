
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
</head>

<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item" style="font-weight:bold;font-size:30px;">Admin Panel</h3>
        <a href="@Url.Action("Index","Admin")" class="w3-bar-item w3-button" style="font-size:22px">Ana Sayfa</a>
        <a href="@Url.Action("Index","Icon")" class="w3-bar-item w3-button" style="font-size:22px">Sosyal Medya</a>
        <a href="@Url.Action("ExperienceIndex","MainPage")" class="w3-bar-item w3-button" style="font-size:22px">Deneyimler</a>
        <a href="@Url.Action("SertificiateIndex","MainPage")" class="w3-bar-item w3-button" style="font-size:22px">Sertifikalar</a>
        <a href="@Url.Action("ProjectIndex","MainPage")" class="w3-bar-item w3-button" style="font-size:22px">Projeler</a>
        <!--<a href="@Url.Action("AdminleriGoster","Admin")" class="w3-bar-item w3-button" style="font-size:22px">Adminler</a>-->
        <a href="@Url.Action("Index","MainPage")" class="w3-bar-item w3-button btn btn-info" style="font-size:22px">Siteye Git</a>
        <a href="@Url.Action("Logout","Login")" class="w3-bar-item w3-button btn btn-danger" style="font-size:22px">Çıkış Yap</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:15%">

        <div class="w3-container w3-teal" style=" background: linear-gradient(to right, blue, purple);">
            <h1>Kişisel Web Sitesi</h1>
        </div>

        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>
